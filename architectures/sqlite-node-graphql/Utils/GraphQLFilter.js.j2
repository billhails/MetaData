{% import 'macros/resolver.j2h' as resolve %}
{% import 'macros/schema.j2h' as arguments %}

const logger = require('./logger');
const util = require('util');
const {
	parseResolveInfo
} = require('graphql-parse-resolve-info');

/**
 * convert graphql requests to dataloader requests and translate the raw data responses to GraphQL structures
 */
class GraphQLFilter {
    constructor(resolver) {
        this.resolver = resolver;
    }

    clearAll() {
        this.resolver.clearAll();
    }

    idToCursor(id) {
        return Buffer.from(id.replaceAll('-', ''), 'hex').toString('base64');
    }

    cursorToId(cursor) {
        const hex = Buffer.from(cursor, 'base64').toString('hex');
        return [
            hex.substring(0, 8),
            hex.substring(8, 12),
            hex.substring(12, 16),
            hex.substring(16, 20),
            hex.substring(20, 32)
        ].join('-');
    }

    makeConnection(rows, count) {
        logger.debug('makeConnection got rows', {rows});
        const startCursor = rows.length ? this.idToCursor(rows[0].id) : null;
        const endCursor = rows.length ? this.idToCursor(rows[rows.length - 1].id) : null;
        const hasPreviousPage = false;
        const hasNextPage = false;
        return {
            totalCount: count,
            edges: rows.map(row => ({ cursor: this.idToCursor(row.id), node: row })),
            pageInfo: {
                startCursor,
                endCursor,
                hasPreviousPage,
                hasNextPage
            }
        };
    }

{%- for entity in schema.get_entities() %}

    async {{ resolve.entity(entity) }}(source, args, req, info) {
        return this.resolver.{{ resolve.entity(entity) }}(source, args, req);
        ;
    }

    async {{ resolve.entities(entity) }}(source, args, req, info) {
        const parsedInfo = parseResolveInfo(info);
        let totalCount = 0;
        if (parsedInfo.fieldsByTypeName?.{{ arguments.entity_connection(entity) }}?.totalCount) {
            const countResult = await this.resolver.{{ resolve.count_entities(entity) }}(source, args, info);
            totalCount = countResult.count || 0;
        }
        if (args.after) {
            const cursor = args.after;
            const id = this.cursorToId(args.after);
            args.after = id;
            logger.debug('cursorToId', {cursor, id})
        }
        return this.resolver.{{ resolve.entities(entity) }}(source, args, req).then(page => this.makeConnection(page, totalCount));
    }

{%-     for reference in entity.get_references() %}

    async {{ resolve.reference_for_entity(entity, reference) }}(entity, args, req, info) {
        logger.debug(`{{ resolve.reference_for_entity(entity, reference) }} got info`, {info: parseResolveInfo(info)});
        return this.resolver.{{ resolve.reference_for_entity(entity, reference) }}(entity, args, req);
    }

{%-     endfor %}

