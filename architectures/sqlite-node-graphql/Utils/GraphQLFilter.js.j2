    }

    async {{ resolve.delete_entity(entity) }}(source, args, req, info) {
        logger.debug(`{{ resolve.delete_entity(entity) }} got info`, {info: parseResolveInfo(info)});
        return this.resolver.{{ resolve.delete_entity(entity) }}(source, args, req).then(status => ({status}));
    }

{%- endfor %}

